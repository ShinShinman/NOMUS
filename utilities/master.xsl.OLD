			<script src="{$workspace}/js/main.min.js" ></script>
			<script>
				$(function(){

					//sticky menu
					$(window).scroll(function(){
						move();
					});

					var anchor = $('.menu-anchor');
					var menu = $('.menu');

					var move = function() {
						var st = $(window).scrollTop();
						var or = anchor.offset().top - 30;
						var state = menu.css('position');
						if(st <xsl:text disable-output-escaping="yes">&gt;</xsl:text> or <xsl:text disable-output-escaping="yes">&amp;&amp;</xsl:text> state == 'relative') {
							var posX = menu.position().left;
							menu.css({
								position: 'fixed',
								top: '30px',
								left: posX
							});
						} else if (st <xsl:text disable-output-escaping="yes">&lt;</xsl:text>= or <xsl:text disable-output-escaping="yes">&amp;&amp;</xsl:text> state == 'fixed'){
							menu.css({
								position: 'relative',
								top: '',
								left: ''
							})
						}

					}

					//menu

					var yszt = $('.yszt');
					menu.find('li').mouseover(function(){
						var h = $(this).find('ul').height();
						yszt.css({
							marginTop: h
						})
					})
					.mouseout(function() {
						yszt.css({
							marginTop: '0'
						})
					})
					

					<xsl:apply-templates select="//dont-hyphenate/entry/item" />
				})
			</script>

